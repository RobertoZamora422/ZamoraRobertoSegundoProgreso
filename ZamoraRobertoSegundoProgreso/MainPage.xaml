<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZamoraRobertoSegundoProgreso.MainPage"
             Title="Inicio">

    <StackLayout Padding="20" Spacing="30">
        <Label Text="App de Roberto Zamora"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Image Source="emoji.png"
               HeightRequest="200"
               Aspect="AspectFit"
               HorizontalOptions="Center" />

        <Button Text="Chistes"
                Clicked="OnChistesClicked"
                BackgroundColor="#512BD4"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                HeightRequest="50" />

        <Button Text="Acerca de mi"
                Clicked="OnAboutClicked"
                BackgroundColor="#2B0B98"
                TextColor="White"
                FontSize="18"
                CornerRadius="10"
                HeightRequest="50" />
    </StackLayout>
</ContentPage>