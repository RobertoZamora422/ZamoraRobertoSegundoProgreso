<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZamoraRobertoSegundoProgreso.MainPage"
             Title="Inicio">
    

    <ScrollView>
        <StackLayout
            Padding="30"
            Spacing="20">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center"/>

            <Label
                Text="Roberto Zamora"
                FontSize="32"
                HorizontalOptions="Center"
                FontAttributes="Bold" />

            <Button
                Text="Chistes"
                Clicked="OnChistesClicked"
                HorizontalOptions="Center"/>
            
            <Button
                Text="About"
                Clicked="OnAboutClicked"
                HorizontalOptions="Center"/>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
